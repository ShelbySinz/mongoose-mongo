<div class="parallax-container">
        <div class="parallax"><img src="background4.jpg" style= "opacity: 0.5;" ></div>
         <br>
         <button class="btn waves-effect waves-light scrape" action= "/scrape" method= "post" >Start Scraping</button>
  
        </div>
 <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s3"><a class = "active"href="#test1">Articles</a></li>
        <li class="tab col s3"><a class="active" href="#test2">Saved Articles</a></li>
        <li class="tab col s3"><a class= "active" href="#test3">Notes</a></li>
        
      </ul>
    </div>
    <div id="test1" class="col s12">
       {{#each articles}}
         <div  class = "card blue-grey" data-id= "{{_id}}">
           <a href= "{{link}}"></a>
         <h4 class = "center-align white-text" style=  "font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;" >{{title}}</h4>
         <p class = "center-align">{{summary}}</p>
          <i class= "small material-icons favorite">favorite_border</i>
         </div>

       {{/each}}

    </div>

    <div id="test2" class="col s12">
    {{#each articles}}
    {{#if favorite}}
       <div  class = "card blue-grey" data-id= "{{_id}}">
           <a href= "{{link}}"></a>
         <h4 class = "center-align white-text" style=  "font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;" >{{title}}</h4>
         <p class = "center-align">{{summary}}</p>
       </div>
    {{/if}}
    {{/each}}
    </div>
    <div id="test3" class="col s12">Test 3</div>
    
  </div>

  <div class="parallax-container">
        <div class="parallax"><img src="background4.jpg" style= "opacity: 0.5;" ></div>
        </div>


<script>
     $(document).ready(function(){
    $('.tabs').tabs();

    $('.parallax').parallax();
  });
</script>