 <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s3"><a class = "active"href="#test1">Articles</a></li>
        <li class="tab col s3"><a class="active" href="#test2">Saved Articles</a></li>
       
        
      </ul>
    </div>
    <div id="test1" class="col s12">
       {{#each articles}}
         <div  class = "card blue-grey">
           <a href= "{{link}}"></a>
         <h4 class = "center-align white-text" style=  "font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;" >{{title}}</h4>
         <p class="center-align">{{summary}}</p>
          <i class= "small material-icons favorite" data-id= "{{id}}" >favorite_border</i>
         </div>

       {{/each}}

    </div>
     <div class="row"></div>
    <div id="test2" class="col s12">
    {{#each articles}}
    {{#if favorite}}
       <div  class = "card grey" id="getnote" data-id= "{{id}}">
           <a href= "{{link}}"></a>
         <h4 class = "center-align white-text" style=  "font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;" >{{title}}</h4>
         <h6 class = "center-align">{{summary}}</h6>
          

          <br>
          
          {{#if note}}
       <strong><h6 class = "center-align">Note for: {{title}}<h6></strong>
           
                 <p class = "center-align white-text">{{note.body}}</p>
                 
                 
                 <button class= "btn waves-light deletenote right" data-id={{note._id}}>Delete</button>
                 
                {{/if}}

             
      
      <form data-id="{{id}}" class= "newNote" >
         
         <br>
        <div class = "row">
          <div class="input-field col s6">
            <textarea id="textarea" class="textarea messagearea" data-length="120"></textarea>
            <label for="textarea" class = "white-text">Textarea</label>
            <button class= "waves-effect waves-light btn" type = "submit ">Submit</button>
          </div>
        </div>
        </form>
        
      
       </div>
    {{/if}}
    {{/each}}
     <!-- Modal Structure -->
 
     
